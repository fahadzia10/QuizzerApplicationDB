<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="fahadzia.quizzer.activity.LoginActivity">

    <EditText
        android:id="@+id/editTextUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:layout_marginTop="32dp"
        android:hint="Username" />

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editTextUsername"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/buttonTeacherLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editTextPassword"
        android:layout_marginTop="14dp"
        android:background="@android:color/holo_blue_light"
        android:backgroundTint="@android:color/holo_orange_light"
        android:elevation="0dp"
        android:onClick="onTeacherLoginClick"
        android:text="Login as Teacher"
        android:textAppearance="@android:style/TextAppearance.Material.Widget.Button"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/buttonStudentLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/buttonTeacherLogin"
        android:layout_marginTop="16dp"
        android:background="@android:color/holo_green_light"
        android:backgroundTint="@android:color/holo_orange_dark"
        android:onClick="onStudentLoginClick"
        android:text="Login as Student"
        android:textAppearance="@android:style/TextAppearance.Material.Widget.Button"
        android:textColor="@android:color/background_light" />

    <TextView
        android:id="@+id/textViewSignup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonStudentLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:onClick="onSignUpClick"
        android:text="New User?"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="cursive"
        android:text="Quizzer"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="48sp" />


</RelativeLayout>
